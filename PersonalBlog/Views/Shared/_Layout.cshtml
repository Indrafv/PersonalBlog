<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Personal Blog</title>
    <script type="importmap"></script>
    
    <!-- Google Fonts: Inter -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PersonalBlog.styles.css" asp-append-version="true" />
</head>
<body class="bg-light-subtle">
    <header class="sticky-top py-3">
        <div class="container">
            <nav class="navbar navbar-expand-sm navbar-light glass-navbar rounded-4 px-4 py-2 custom-shadow">
                <a class="navbar-brand fw-bold text-gradient" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fa-solid fa-feather-pointed me-2"></i>Indra's Blog
                </a>
                <button class="navbar-toggler border-0 shadow-none" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav ms-auto align-items-center gap-2">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link fw-medium hero-link" asp-area="" asp-controller="Articles" asp-action="Admin">
                                    <i class="fa-solid fa-gauge-high me-1"></i> Admin
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link fw-medium hero-link" asp-area="" asp-controller="Articles" asp-action="New">
                                    <i class="fa-solid fa-pen-to-square me-1"></i> New Article
                                </a>
                            </li>
                            <li class="nav-item ms-lg-2 mt-2 mt-lg-0">
                                <a class="btn btn-outline-danger btn-sm rounded-pill px-3 fw-medium" asp-area="" asp-controller="Home" asp-action="LogOut">
                                    <i class="fa-solid fa-arrow-right-from-bracket me-1"></i> Log Out
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item mt-2 mt-lg-0">
                                <a class="btn btn-primary rounded-pill px-4 fw-medium shadow-sm hover-lift" asp-area="" asp-controller="Access" asp-action="Login">
                                    <i class="fa-solid fa-user me-1"></i> Log In
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </nav>
        </div>
    </header>
    
    <div class="container main-content-container pt-4">
        <main role="main" class="pb-5">
            @RenderBody()
        </main>
    </div>

    <footer class="footer mt-auto py-4 bg-white border-top">
        <div class="container text-center text-muted">
            <span class="small">&copy; @DateTime.Now.Year - Indra's Personal Blog. Built with <i class="fa-solid fa-heart text-danger mx-1"></i> and ASP.NET Core.</span>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
