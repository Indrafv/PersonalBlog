@{
    ViewData["Title"] = "Home Page";
}
@model List<PersonalBlog.Models.Articles>;

<div class="container pb-5">
    <!-- Hero Section -->
    <div class="row mb-5 pt-4">
        <div class="col-lg-8 mx-auto text-center">
            <h1 class="display-4 fw-bold mb-3 text-gradient">Welcome to My Blog</h1>
            <p class="lead text-muted mb-4">Sharing thoughts, tutorials, and stories on web development and life.</p>
        </div>
    </div>

    <!-- Articles Grid -->
    <div class="row g-4">
        @if(Model != null && Model.Any())
        {
            @foreach(var article in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 rounded-4 custom-shadow hover-lift overflow-hidden">
                        <div class="card-body p-4 d-flex flex-column">
                            <h5 class="card-title fw-bold mb-3">
                                <a asp-controller="Articles" asp-action="Posts" asp-route-id="@article.ArticleId" class="text-decoration-none text-dark hero-link">@article.Title</a>
                            </h5>
                            <p class="card-text text-muted small mb-4 flex-grow-1">
                                <!-- Truncated content could go here if available -->
                                Read this amazing piece and explore the insights shared within.
                            </p>
                            <div class="d-flex align-items-center justify-content-between mt-auto pt-3 border-top border-subtle">
                                <span class="badge bg-primary bg-opacity-10 text-primary rounded-pill px-3 py-2 fw-medium">
                                    <i class="fa-regular fa-calendar me-1"></i> @article.PublishingDate.ToString("MMM dd, yyyy")
                                </span>
                                <a asp-controller="Articles" asp-action="Posts" asp-route-id="@article.ArticleId" class="btn btn-link text-decoration-none text-primary p-0 fw-bold">Read <i class="fa-solid fa-arrow-right ms-1"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center py-5">
                <div class="text-muted">
                    <i class="fa-solid fa-folder-open fa-3x mb-3 text-light"></i>
                    <h4 class="fw-medium">No articles yet</h4>
                    <p>Check back later for new content!</p>
                </div>
            </div>
        }
    </div>
</div>