@model PersonalBlog.ViewModel.LoginVM;

<div class="row mt-5 justify-content-center">
    <div class="col-sm-4">
        <div class="card">
            <div class="card-header">
                Log In
            </div>
            <div class="card-body">
                <form asp-controller="Access" asp-action="Login" method="post">
                    <input class="form-control mb-3" type="text" placeholder="Username" required asp-for="Name" />
                    <input class="form-control mb-3" type="password" placeholder="Password" required asp-for="Password" />
                    
                    <div class="d-grid gap-2 mb-3">
                        <button class="btn btn-outline-primary" type="submit">Login</button>
                    </div>

                    @if(ViewData["Message"] != null)
                        {
                            <div class="alert alert-danger" role="alert">
                                @ViewData["Message"];
                            </div>
                        }
                    </form>
            </div>
        </div>
    </div>
</div>