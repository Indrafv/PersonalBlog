@{
}
@model List<PersonalBlog.Models.Articles>;

<h1>Personal Blog - Indra</h1>
<br />
@foreach (var article in Model)
{
    <div class="row">
        <div class="col">
            <p>@article.Title</p>
        </div>
        <div class="col">
            <a 
                asp-controller="Articles"
                asp-action="Edit"
                asp-route-id="@article.ArticleId"
                class="btn btn-outline-primary">Editar
            </a>
        </div>
        <div class="col">
            <button type="submit" class="btn btn-outline-danger">Eliminar</button>
        </div>
    </div>
}