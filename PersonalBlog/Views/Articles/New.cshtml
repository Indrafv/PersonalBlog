@model PersonalBlog.Models.Articles;
@{
    ViewData["Title"] = "New Article";
}

<div class="row justify-content-center pt-4 mb-5">
    <div class="col-lg-8">
        <div class="d-flex align-items-center mb-4">
            <a asp-action="Admin" class="btn btn-link text-decoration-none text-muted p-0 me-3 hover-lift">
                <i class="fa-solid fa-arrow-left fa-lg"></i>
            </a>
            <h2 class="fw-bold mb-0">Create New Article</h2>
        </div>

        <div class="card border-0 rounded-4 custom-shadow glass-navbar">
            <div class="card-body p-4 p-md-5">
                <form asp-controller="Articles" asp-action="New" method="post">
                    <div class="form-floating mb-4">
                        <input class="form-control fw-bold fs-5" asp-for="Title" type="text" id="titleInput" placeholder="Article Title" required />
                        <label for="titleInput" class="text-muted">Article Title</label>
                    </div>
                    
                    <div class="form-floating mb-4">
                        <textarea class="form-control" asp-for="Content" id="contentInput" placeholder="Write your amazing content here..." style="height: 300px; resize: none;" required></textarea>
                        <label for="contentInput" class="text-muted">Article Content</label>
                    </div>
                    
                    <div class="d-flex justify-content-end gap-3 mt-5 border-top pt-4">
                        <a asp-action="Admin" class="btn btn-light rounded-pill px-4 fw-medium">Cancel</a>
                        <button class="btn btn-primary rounded-pill px-5 fw-bold hover-lift" type="submit">
                            <i class="fa-solid fa-paper-plane me-2"></i>Publish Article
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>